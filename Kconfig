choice
    prompt "Select the Board"
    default BOARD_USING_RaspberryPi3

    config BOARD_USING_RaspberryPi3
        bool "using board raspberry pi 3"

    config BOARD_USING_RaspberryPi4
        bool "using board raspberry pi 4"
endchoice

config KERNEL_ENABLE_GUI
    bool "enable GUI"
    default y

config KERNEL_ENABLE_SMP
    bool "enable smp"
    default n

config KERNEL_PRINT_MEMORY_LAYOUT
    bool "print memory layout info"
    default y

config KERNEL_ENABLE_KASLR
    bool "enable KASLR"
    default n

config SMP_MAX_CPUS
    int "smp max cpus"
    range 1 32
    default 16
